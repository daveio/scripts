<div class="min-h-screen bg-base-100 p-4">
  <div class="container mx-auto">
    <div class="mb-8 flex items-center gap-4">
      <%= link_to "â† Back to Demo Home", demo_index_path, class: "btn btn-sm btn-ghost" %>
      <h1 class="text-3xl font-bold">UI Components Demo</h1>
    </div>

    <!-- Theme info box -->
    <div class="alert mb-8">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>Try changing the theme using the selector in the top right corner to see how components adapt!</span>
    </div>

    <!-- Color palette showcase -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Theme Colors</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="p-4 bg-primary text-primary-content rounded-box">Primary</div>
        <div class="p-4 bg-secondary text-secondary-content rounded-box">Secondary</div>
        <div class="p-4 bg-accent text-accent-content rounded-box">Accent</div>
        <div class="p-4 bg-neutral text-neutral-content rounded-box">Neutral</div>
        <div class="p-4 bg-base-100 border border-base-300 rounded-box">Base 100</div>
        <div class="p-4 bg-base-200 rounded-box">Base 200</div>
        <div class="p-4 bg-base-300 rounded-box">Base 300</div>
        <div class="p-4 bg-base-content text-base-100 rounded-box">Base Content</div>
        <div class="p-4 bg-info text-info-content rounded-box">Info</div>
        <div class="p-4 bg-success text-success-content rounded-box">Success</div>
        <div class="p-4 bg-warning text-warning-content rounded-box">Warning</div>
        <div class="p-4 bg-error text-error-content rounded-box">Error</div>
      </div>
    </section>

    <!-- Button showcase -->
    <section class="mb-12 p-6 bg-base-200 rounded-box">
      <h2 class="text-2xl font-bold mb-4">Buttons</h2>

      <h3 class="text-xl font-semibold mb-2">Button Colors</h3>
      <div class="flex flex-wrap gap-2 mb-4">
        <button class="btn">Default</button>
        <button class="btn btn-primary">Primary</button>
        <button class="btn btn-secondary">Secondary</button>
        <button class="btn btn-accent">Accent</button>
        <button class="btn btn-info">Info</button>
        <button class="btn btn-success">Success</button>
        <button class="btn btn-warning">Warning</button>
        <button class="btn btn-error">Error</button>
        <button class="btn btn-neutral">Neutral</button>
        <button class="btn btn-ghost">Ghost</button>
        <button class="btn btn-link">Link</button>
      </div>

      <h3 class="text-xl font-semibold mb-2">Button Variants</h3>
      <div class="flex flex-wrap gap-2 mb-4">
        <button class="btn btn-primary">Default</button>
        <button class="btn btn-primary btn-outline">Outline</button>
        <button class="btn btn-primary btn-active">Active</button>
        <button class="btn btn-primary btn-disabled">Disabled</button>
        <button class="btn btn-primary loading">Loading</button>
        <button class="btn btn-primary no-animation">No Animation</button>
      </div>

      <h3 class="text-xl font-semibold mb-2">Button Sizes</h3>
      <div class="flex flex-wrap items-center gap-2">
        <button class="btn btn-primary btn-xs">Extra Small</button>
        <button class="btn btn-primary btn-sm">Small</button>
        <button class="btn btn-primary">Normal</button>
        <button class="btn btn-primary btn-lg">Large</button>
        <button class="btn btn-primary btn-wide">Wide</button>
        <button class="btn btn-primary btn-block">Block</button>
        <button class="btn btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </section>

    <!-- Card showcase -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="card bg-base-200 shadow-xl">
          <figure><img src="https://daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.jpg" alt="Shoes" /></figure>
          <div class="card-body">
            <h2 class="card-title">Standard Card</h2>
            <p>Basic card with image, title, content and actions</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">Action</button>
            </div>
          </div>
        </div>

        <div class="card bg-base-200 shadow-xl image-full">
          <figure><img src="https://daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.jpg" alt="Shoes" /></figure>
          <div class="card-body">
            <h2 class="card-title">Image Overlay</h2>
            <p>Card with full image background and content overlay</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">Action</button>
            </div>
          </div>
        </div>

        <div class="card bg-primary text-primary-content shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Colored Card</h2>
            <p>Card with primary color background and appropriate text color</p>
            <div class="card-actions justify-end">
              <button class="btn">Action</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form elements -->
    <section class="mb-12 p-6 bg-base-200 rounded-box">
      <h2 class="text-2xl font-bold mb-4">Form Elements</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-xl font-semibold mb-2">Inputs</h3>
          <div class="flex flex-col gap-4">
            <input type="text" placeholder="Default input" class="input input-bordered w-full" />
            <input type="text" placeholder="Primary input" class="input input-primary input-bordered w-full" />
            <input type="text" placeholder="Secondary input" class="input input-secondary input-bordered w-full" />
            <input type="text" placeholder="Disabled input" disabled class="input input-bordered w-full" />
            <div class="form-control">
              <label class="label">
                <span class="label-text">With label and helper text</span>
              </label>
              <input type="text" placeholder="Input with label" class="input input-bordered w-full" />
              <label class="label">
                <span class="label-text-alt">Helper text</span>
              </label>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-2">Select & Checkboxes</h3>
          <div class="flex flex-col gap-4">
            <select class="select select-bordered w-full">
              <option disabled selected>Select an option</option>
              <option>Option 1</option>
              <option>Option 2</option>
              <option>Option 3</option>
            </select>

            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Default checkbox</span>
                <input type="checkbox" class="checkbox" />
              </label>
            </div>

            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Primary checkbox</span>
                <input type="checkbox" class="checkbox checkbox-primary" checked />
              </label>
            </div>

            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Default toggle</span>
                <input type="checkbox" class="toggle" />
              </label>
            </div>

            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Primary toggle</span>
                <input type="checkbox" class="toggle toggle-primary" checked />
              </label>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Alerts -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Alerts</h2>
      <div class="flex flex-col gap-4">
        <div class="alert">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Default alert (neutral)</span>
        </div>

        <div class="alert alert-info">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Information message</span>
          <div>
            <button class="btn btn-sm">Dismiss</button>
          </div>
        </div>

        <div class="alert alert-success">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Success message</span>
        </div>

        <div class="alert alert-warning">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <span>Warning message</span>
        </div>

        <div class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Error message</span>
        </div>
      </div>
    </section>

    <!-- Modal example -->
    <section class="mb-12 p-6 bg-base-200 rounded-box">
      <h2 class="text-2xl font-bold mb-4">Modal</h2>
      <div class="flex flex-wrap gap-2">
        <button class="btn" onclick="document.getElementById('demo_modal').showModal()">Open Modal</button>
        <button class="btn btn-primary" onclick="document.getElementById('demo_modal_2').showModal()">Modal with Form</button>
      </div>

      <dialog id="demo_modal" class="modal">
        <div class="modal-box">
          <h3 class="font-bold text-lg">Basic Modal</h3>
          <p class="py-4">This is a modal example showcasing DaisyUI's modal component</p>
          <div class="modal-action">
            <form method="dialog">
              <button class="btn">Close</button>
            </form>
          </div>
        </div>
      </dialog>

      <dialog id="demo_modal_2" class="modal">
        <div class="modal-box">
          <h3 class="font-bold text-lg">Modal with Form</h3>
          <div class="py-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Email</span>
              </label>
              <input type="email" placeholder="email@example.com" class="input input-bordered" />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Message</span>
              </label>
              <textarea class="textarea textarea-bordered" placeholder="Your message here"></textarea>
            </div>
          </div>
          <div class="modal-action">
            <form method="dialog" class="flex gap-2">
              <button class="btn btn-primary">Submit</button>
              <button class="btn">Cancel</button>
            </form>
          </div>
        </div>
      </dialog>
    </section>

    <!-- Tabs example -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Tabs</h2>
      <div class="tabs tabs-boxed mb-4">
        <a class="tab">Tab 1</a>
        <a class="tab tab-active">Tab 2</a>
        <a class="tab">Tab 3</a>
      </div>

      <div class="tabs">
        <a class="tab tab-lifted">Tab 1</a>
        <a class="tab tab-lifted tab-active">Tab 2</a>
        <a class="tab tab-lifted">Tab 3</a>
      </div>
    </section>

    <!-- Tailwind utility showcase -->
    <section class="mb-12 p-6 bg-base-200 rounded-box">
      <h2 class="text-2xl font-bold mb-4">Tailwind Utilities</h2>

      <h3 class="text-xl font-semibold mb-2">Spacing & Layout</h3>
      <div class="grid grid-cols-4 gap-4 mb-6">
        <div class="p-2 bg-base-300 rounded">p-2</div>
        <div class="p-4 bg-base-300 rounded">p-4</div>
        <div class="p-6 bg-base-300 rounded">p-6</div>
        <div class="p-8 bg-base-300 rounded">p-8</div>
      </div>

      <h3 class="text-xl font-semibold mb-2">Typography</h3>
      <div class="space-y-2 mb-6">
        <p class="text-xs">Text Extra Small</p>
        <p class="text-sm">Text Small</p>
        <p class="text-base">Text Base</p>
        <p class="text-lg">Text Large</p>
        <p class="text-xl">Text Extra Large</p>
        <p class="text-2xl">Text 2XL</p>
        <p class="font-bold">Bold Text</p>
        <p class="font-semibold">Semibold Text</p>
        <p class="italic">Italic Text</p>
        <p class="underline">Underlined Text</p>
      </div>

      <h3 class="text-xl font-semibold mb-2">Flexbox & Grid</h3>
      <div class="mb-6">
        <div class="flex gap-2 mb-4">
          <div class="bg-base-300 p-4 rounded">Flex 1</div>
          <div class="bg-base-300 p-4 rounded">Flex 2</div>
          <div class="bg-base-300 p-4 rounded">Flex 3</div>
        </div>

        <div class="grid grid-cols-3 gap-2">
          <div class="bg-base-300 p-4 rounded">Grid 1</div>
          <div class="bg-base-300 p-4 rounded">Grid 2</div>
          <div class="bg-base-300 p-4 rounded">Grid 3</div>
          <div class="bg-base-300 p-4 rounded">Grid 4</div>
          <div class="bg-base-300 p-4 rounded">Grid 5</div>
          <div class="bg-base-300 p-4 rounded col-span-2">Grid 6 (spans 2)</div>
          <div class="bg-base-300 p-4 rounded">Grid 7</div>
        </div>
      </div>
    </section>

    <div class="flex justify-center mb-8">
      <%= link_to "Back to Demo Home", demo_index_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
